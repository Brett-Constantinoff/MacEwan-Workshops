# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  GLFW_config = debug
  GLM_config = debug
  GLAD_config = debug
  Intro_config = debug
endif
ifeq ($(config),release)
  GLFW_config = release
  GLM_config = release
  GLAD_config = release
  Intro_config = release
endif

PROJECTS := GLFW GLM GLAD Intro

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

GLFW:
ifneq (,$(GLFW_config))
	@echo "==== Building GLFW ($(GLFW_config)) ===="
	@${MAKE} --no-print-directory -C ../../Libs -f GLFW.make config=$(GLFW_config)
endif

GLM:
ifneq (,$(GLM_config))
	@echo "==== Building GLM ($(GLM_config)) ===="
	@${MAKE} --no-print-directory -C ../../Libs -f GLM.make config=$(GLM_config)
endif

GLAD:
ifneq (,$(GLAD_config))
	@echo "==== Building GLAD ($(GLAD_config)) ===="
	@${MAKE} --no-print-directory -C ../../Libs -f GLAD.make config=$(GLAD_config)
endif

Intro: GLFW GLM GLAD
ifneq (,$(Intro_config))
	@echo "==== Building Intro ($(Intro_config)) ===="
	@${MAKE} --no-print-directory -C . -f Intro.make config=$(Intro_config)
endif

clean:
	@${MAKE} --no-print-directory -C ../../Libs -f GLFW.make clean
	@${MAKE} --no-print-directory -C ../../Libs -f GLM.make clean
	@${MAKE} --no-print-directory -C ../../Libs -f GLAD.make clean
	@${MAKE} --no-print-directory -C . -f Intro.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   GLFW"
	@echo "   GLM"
	@echo "   GLAD"
	@echo "   Intro"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"